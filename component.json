{
    "title": "Shopify Admin",
    "description": "elastic.io component for the Shopify Admin API",
    "docsUrl": "https://github.com/elasticio/shopify-admin-component",
    "credentials": {
        "fields": {
            "shopName": {
                "label": "Shop name",
                "required": true,
                "viewClass": "TextFieldView"
            },
            "apiKey": {
                "label": "API Key",
                "required": true,
                "viewClass": "TextFieldView"
            },
            "password": {
                "label": "Password",
                "required": true,
                "viewClass": "PasswordFieldView"
            }
        }
    },
    "actions": {
        "listProducts": {
            "main": "./lib/actions/listProducts.js",
            "title": "List products",
            "description": "Retrieves a list of products.",
            "metadata": {
                "in": "./lib/schemas/listProducts.in.json",
                "out": "./lib/schemas/listProducts.out.json"
            }
        },
        "upsertProduct": {
            "main": "./lib/actions/upsertProduct.js",
            "title": "Upsert product",
            "description": "Executes update operation if id is assigned or create in other case.",
            "metadata": {
                "in": "./lib/schemas/upsertProduct.in.json",
                "out": "./lib/schemas/upsertProduct.out.json"
            }
        }
    }
}
